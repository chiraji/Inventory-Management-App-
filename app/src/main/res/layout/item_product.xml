<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Product ID -->
        <TextView
            android:id="@+id/textViewProductId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 123"
            android:textColor="#6200EE"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"/>

        <!-- Product Name -->
        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProductId"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Quantity -->
        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProductName"
            android:text="Quantity: 50"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <!-- Expire Date -->
        <TextView
            android:id="@+id/textViewExpireDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewQuantity"
            android:text="Expire Date: 2024-12-31"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/textViewExpireDate"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
